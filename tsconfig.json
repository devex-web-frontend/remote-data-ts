{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom"],
    "outDir": "dist/lib",
    "declaration": true,
    "strict": true,
    "importHelpers": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}
